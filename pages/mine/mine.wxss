/* pages/mine/mine.wxss */
.mian-cotianer {
  min-height: 100vh;
  background: rgb(247, 247, 247);
}
.navbar-contianer {
  width: 100%;
  height: 378rpx;
  background-image: linear-gradient(225deg, #fe3b30 0%, #ff3366 100%);
}
.navBar {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.navBar .navBar-right {
  display: flex;
  align-items: center;
  color: #fff;
  margin-right: 200rpx;
  /* margin: 0 10rpx; */
}
.navBar-icon {
  margin: 0 10rpx 0 0;
}
.userInfo {
  display: flex;
  align-items: center;
  padding: 0 24px;
  color: #fff;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  /* background-color: #0ff; */
}
.header-contianer {
  width:  710rpx;
  height: 150rpx;
  margin: -30px auto;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 16rpx;
}
.header-contianer .item {
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  opacity: 0.8;
  color: rgb(34, 38, 46);
  font-family: PingFangSC;
  font-size: 12px;
  font-weight: undefined;
  line-height: 18px;
  letter-spacing: 0px;
  text-align: left;
}

.header-contianer .item .num {
  color: rgb(34, 38, 46);
  font-family: HelveticaNeue;
  font-size: 18px;
  font-weight: 600;
  line-height: 27px;
  letter-spacing: 0px;
  text-align: center;
}